<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"


    tools:context=".ResultActivity">

    <!-- Top Scoreboard Section -->
    <LinearLayout
        android:id="@+id/scoreboardSection"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/scoreboard_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true" />
        <!-- Scoreboard Title -->
        <TextView
            android:id="@+id/scoreboardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Scoreboard"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />

        <!-- User Name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <!-- User Score -->
        <TextView
            android:id="@+id/userScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6/10"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- Share Score Button -->
    <Button
        android:id="@+id/shareButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Share your score"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scoreboardSection"
        android:layout_marginTop="40dp"/>

</RelativeLayout>